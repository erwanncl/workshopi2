{
  "manifest_version": 2,
  "name": "Protection Contre Contenu Inapproprié",
  "version": "1.0",
  "description": "Extension pour limiter le temps passé sur certains réseaux sociaux.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Protection Enfants"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.tiktok.com/*",
        "*://*.snapchat.com/*",
        "*://*.twitter.com/*",
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content_script.js"]
    }
  ]
}
